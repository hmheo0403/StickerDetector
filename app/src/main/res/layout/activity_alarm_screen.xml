<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_alarm_screen"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:background="@drawable/back"
    android:padding="16dp"
    tools:context="com.cfd.map.mohit.locationalarm.locationalarm.AlarmScreenActivity">
    <LinearLayout
        android:id="@+id/arrived"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="YOU HAVE ARRIVED "
            android:textColor="#fff"
            android:textSize="20sp"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/show_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAllCaps="true"
            android:textColor="#fff"
            android:textSize="20sp"
            android:textStyle="bold"
            tools:text="Name"
            android:textAlignment="center"/>
    </LinearLayout>
    <TextView
        android:id="@+id/show_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/arrived"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:text="18sp"
        android:textColor="#f8f8f8"
        android:textStyle="italic"
        tools:text="MESSAGE" />
    <ImageView
        android:layout_width="125dp"
        android:layout_height="125dp"
        android:layout_centerInParent="true"
        android:src="@drawable/ic_notifications_active_black_48dp" />
    <Button
        android:id="@+id/off_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="50dp"
        android:background="@drawable/button"
        android:onClick="offAlarm"
        android:text="Off"
        android:textSize="24dp"
        android:textStyle="bold" />
</RelativeLayout>
